{
  "incremental": true,
  "markdown": {
    "lineWidth": 100,
    "textWrap": "always",
    "emphasisKind": "asterisks",
    "strongKind": "asterisks",
    "newLineKind": "lf"
  },
  "includes": [
    "**/*.md"
  ],
  "excludes": [
    "**/target",
    "**/node_modules",
    "**/.git"
  ],
  "plugins": [
    "https://plugins.dprint.dev/markdown-0.16.3.wasm"
  ]
}